<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ChangeStudentsClassFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/navBar"
            layout="@layout/nav_bar"
            />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="20dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvChangeStudentsClassFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/btnAddChangeStudentsClassFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addButtonLabel"
            android:layout_margin="20dp"
            />

    </LinearLayout>

    <include
        android:id="@+id/deleteMenuChangeStudentsClassFragment"
        layout="@layout/delete_menu"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>