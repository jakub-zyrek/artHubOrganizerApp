<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.ArtHubOrganizer" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="fontFamily">@font/ibm</item>
    </style>

    <style name="svgColor">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="Theme.ArtHubOrganizer" parent="Base.Theme.ArtHubOrganizer" />

    <style name="menus">
        <item name="android:background">@drawable/rounded_black_view</item>
    </style>


    <style name="startFragmentTextView">
        <item name="android:textSize">65sp</item>
        <item name="fontFamily">@font/righteous</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MenuOptionStyle">
        <item name="android:layout_weight">13</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoSizeTextType" tools:ignore="NewApi">uniform</item>
        <item name="android:autoSizeMaxTextSize" tools:ignore="NewApi">20sp</item>
        <item name="android:autoSizeMinTextSize" tools:ignore="NewApi">10sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:textColorPrimary">@color/primaryColor</item>
    </style>

    <style name="workerMenuClass">
        <item name="android:background">@drawable/rounded_secondary_view_night</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>